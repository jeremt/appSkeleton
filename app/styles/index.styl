
// Dependencies

@import "config.styl"

// Some general style

::selection
  background flat_blue
  color white

*
  box-sizing border-box

body
  animation bounceInDown 1s
  font-family font_body
  color bw_body
  max-width 800px
  min-width 600px
  margin 0 auto
  padding 0

h1, h2, h3, h4
  font-family font_title
  color bw_title

a
  color flat_blue
  text-decoration none
  cursor pointer

  &:hover
    color flat_dark_blue
    border-bottom 1px solid flat_dark_blue

// Header's style

header
  padding 20px
  text-align center
  img
    width 200px
    opacity 0.8
  h1
    font-size 3em
    text-shadow 0px 4px 0px bw_border

// Navigation's style

nav
  text-align center
  margin-bottom 40px
  a
    i
      padding-right 10px
    font-family font_title
    color bw_body
    font-size 2em
    padding 10px
    margin 5px
    border 2px solid bw_border
    &:hover
      color bw_title
      border 2px solid bw_body

// Section's style
section
  padding 0 50px

// Aside's style

aside
  background bw_background
  border 2px solid bw_border
  padding 20px
  width: 30%
  float left
  a
    color bw_body
    display block
    padding 10px
    &:hover
      border-bottom none
    &.current
      color flat_dark_blue

// Content's style

#documentation .content
  margin-left 30%
  width 70%
  padding 0px 20px

// Footer's style

footer
  position relative
  clear both
  padding-top 20px
  p
    font-family font_title
    font-size 1.2em
    text-align center
    border-top 2px solid bw_border
    margin 0
    padding 10px
    color bw_border
